node {
   def commit_id
   stage('Preparation') {
     checkout scm
     sh "git rev-parse --short HEAD > .git/commit-id"                        
     commit_id = readFile('.git/commit-id').trim()
   }
   stage('test') {
     nodejs(nodeJSInstallationName: 'nodejs') {
       sh 'npm install --only=dev'
     }
   }
   stage('docker build/push') {
     docker.withRegistry('https://index.docker.io/v2/', '0e932575-d082-4782-a39c-a67b4a6bdfb0') {
       def app = docker.build("bambino29/docker-node-demo:${commit_id}", '.').push()
     }
   }
}



